FROM python:3.11-slim

WORKDIR /app

# התקן תלויות מערכת
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# העתק קבצי דרישות
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# העתק קוד האפליקציה
COPY . .

# חשוף פורט
EXPOSE 8000

# הרץ את האפליקציה
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
