# ---------- General ----------
APP_NAME="Airdrop Platform"
ENVIRONMENT=local
DEBUG=true
LOG_LEVEL=INFO

# ---------- Backend ----------
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
CORS_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# Database (Postgres)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@127.0.0.1:5432/airdropdb

# Redis
REDIS_URL=redis://127.0.0.1:6379/0

# Admin
ADMIN_SECRET=change-me-super-secret

# Telegram (for verifying WebApp initData and bot runtime)
TELEGRAM_BOT_TOKEN=123456:replace_me
TELEGRAM_WEBHOOK_URL=  # optional, e.g. https://your-service.up.railway.app/bot/webhook
TELEGRAM_WEBHOOK_SECRET=change-me-webhook-secret

# Feature flags (comma separated) â€” defaults can be overridden by DB/Redis too
FEATURE_FLAGS=AIRDROP_ENABLED,AUTO_APPROVE_ENABLED,WEBAPP_ENABLED

# Airdrop limits
MAX_AIRDROP_PER_USER=100
RATE_LIMIT_PER_HOUR=3
AUTO_APPROVE_DELAY_SECONDS=10

# Webapp
WEBAPP_PUBLIC_PATH=/webapp
