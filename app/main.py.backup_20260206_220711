from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
import os

# ייבוא הראוטים
try:
    from app.routes import health, airdrop
    HAS_AIRDROP_ROUTES = True
except ImportError:
    HAS_AIRDROP_ROUTES = False
    print("Warning: airdrop routes not found")

app = FastAPI(
    title="Airdrop API",
    description="API for managing cryptocurrency airdrops with TON payments",
    version="2.0.0",
    docs_url="/docs",
    redoc_url="/redoc"
)

# CORS
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

# הרשמת ראוטים קיימים
try:
    from app.routes.health import router as health_router
    app.include_router(health_router)
except ImportError:
    pass

if HAS_AIRDROP_ROUTES:
    app.include_router(airdrop.router)
    print("Airdrop routes loaded successfully")
else:
    print("Airdrop routes not available")

@app.get("/")
async def root():
    return {
        "message": "🚀 Airdrop API v2.0 is running!",
        "version": "2.0.0",
        "status": "operational",
        "ton_wallet": os.getenv("TON_WALLET_ADDRESS", "Not configured"),
        "airdrop_price": os.getenv("AIRDROP_PRICE_ILS", "44.4"),
        "endpoints": {
            "docs": "/docs",
            "health": "/health",
            "register_user": "/api/v1/users/register (POST)",
            "request_airdrop": "/api/v1/airdrop/request (POST)",
            "user_balance": "/api/v1/users/{id}/balance (GET)",
            "verify_transaction": "/api/v1/transactions/{id}/verify (GET)",
            "telegram_webhook": "/api/v1/webhook/telegram (POST)"
        }
    }

@app.get("/status")
async def status():
    return {
        "api": "running",
        "database": "not_connected",  # TODO: Add database
        "telegram_bot": "active",
        "ton_integration": "simulated",
        "version": "2.0.0"
    }

if __name__ == "__main__":
    import uvicorn
    port = int(os.getenv("PORT", 8000))
    uvicorn.run(app, host="0.0.0.0", port=port)
